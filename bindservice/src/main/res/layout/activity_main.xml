<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bindservice.MainActivity"
    android:orientation="vertical"
   >

    <Button
        android:id="@+id/btn_bind_remote_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bind_remote_service" />

    <Button
        android:id="@+id/btn_unbind_remote_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/unbind_remote_service" />

    <Button
        android:id="@+id/btn_set_count_to_100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/set_count__to_100" />

</LinearLayout>
